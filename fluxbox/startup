# vim:set ts=8 sw=4 sts=4 et:

export PATH="~/bin:~/.dotfiles/bin:${PATH}"

# Poweroff the display after five minutes of inactivity
xset s blank
xset dpms 300 300 300

# Set the keyboard repeat delay (ms) and repeat rate (keystrokes/sec)
xset r rate 200 50

# Turn on the number lock
numlockx on

# Ceter the wallpaper. Use -f if the wallpaper is larger than the screen
#fbsetbg -c ~/.fluxbox/wallpaper.jpg

# Get rid of the horrible default GTK theme
gnome-settings-daemon &
#gnome-volume-control-applet &

#xscreensaver -nosplash &
#conky &
#gkrellm &

exec /usr/bin/fluxbox -log ~/.fluxbox/log -verbose
