        [reconfig] (Reconfig)
        [restart] (Restart)
        [exit] (Exit)
    [end]

    [exec] (HTop) {pterm htop}
    [exec] (Mixer) {pterm mixer}
    [exec] (Nautilus) {nautilus --no-desktop ~}
