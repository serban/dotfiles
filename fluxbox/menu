        [exec] (Xterm) {pterm xterm}
        [separator]
        [exec] (White) {pterm white}
        [exec] (Black) {pterm black}
        [exec] (Red) {pterm red}
        [exec] (Orange) {pterm orange}
        [exec] (Green) {pterm green}
        [exec] (Cyan) {pterm cyan}
        [exec] (Purple) {pterm purple}
    [end]

    [submenu] (Browsers)
        [exec] (Chrome) {google-chrome}
        [exec] (Firefox) {firefox}
        [exec] (Opera) {opera -notrayicon}
    [end]

    [submenu] (Fluxbox)
