// https://zed.dev/docs/configuring-zed
{
  "auto_install_extension": {
    "catppuccin": true,
    "fleet-themes": true,
    "ruff": true
  },
  "theme": {
    "mode": "system",
    "light": "Fleet Light",
    "dark": "Catppuccin Mocha"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "project_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "version": "2",
    "enabled": false
  },
  "search": {
    "button": false
  },
  "terminal": {
    "button": false,
    "line_height": "standard",
    "option_as_meta": true
  },
  "tab_bar": {
    "show": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "left",
    "show_close_button": "hidden",
    "activate_on_close": "left_neighbour"
  },
  "toolbar": {
    "quick_actions": false
  },
  "gutter": {
    "folds": false
  },
  "indent_guides": {
    "enabled": false
  },
  "scrollbar": {
    "show": "auto",
    "cursors": false,
    "git_diff": false,
    "search_results": true,
    "selected_text": false,
    "selected_symbol": false,
    "diagnostics": "none",
    "axes": {
      "horizontal": false
    }
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "min_column": 81,
      "show_commit_summary": true
    }
  },
  "max_tabs": 1,
  "buffer_font_family": "Monaco",
  "buffer_font_size": 15,
  "cursor_blink": false,
  "current_line_highlight": "gutter",
  "wrap_guides": [80],
  "vim_mode": true,
  "relative_line_numbers": true,
  "search_wrap": false,
  "tab_size": 2,
  "inline_code_actions": false,
  "format_on_save": "off",
  "languages": {
    "Go": {
      "format_on_save": "on"
    },
    "JSONC": {
      "format_on_save": "on"
    },
    "Lua": {
      "enable_language_server": false
    },
    "Rust": {
      "format_on_save": "on"
    },
    "Swift": {
      "format_on_save": "on"
    },
    "Zig": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        }
      }
    }
  }
}
