// https://zed.dev/docs/configuring-zed
{
  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "Atelier Lakeside Dark"
  },
  "project_panel": {
    "auto_fold_dirs": true
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "indent_guides": {
    "enabled": false
  },
  "scrollbar": {
    "show": "never"
  },
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "min_column": 81,
      "show_commit_summary": true
    }
  },
  "buffer_font_family": "Monaco",
  "buffer_font_size": 15,
  "cursor_blink": false,
  "wrap_guides": [80],
  "vim_mode": true,
  "tab_size": 2,
  "format_on_save": "off",
  "languages": {
    "Go": {
      "format_on_save": "on"
    },
    "JSONC": {
      "format_on_save": "on"
    },
    "Rust": {
      "format_on_save": "on"
    },
    "Swift": {
      "format_on_save": "on"
    },
    "Zig": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        }
      }
    }
  }
}
