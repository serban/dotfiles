#!/bin/bash
# vim:set ts=8 sw=2 sts=2 et:

xterm='xterm -ls -si -sk -sb -rightbar -sl 10000 -geometry 180x29'
aterm='aterm -ls -si -sk -sr -sl 10000 -geometry 138x32'
aterm_transparent="$aterm -tr -trsb -sh 50 -fade 70"

case "$1" in
  white)  $aterm -bg white -fg black ;;
  black)  $aterm -bg black -fg white ;;
  root)   $aterm -bg black -fg white -title root -e su - ;;
  xterm)  $xterm ;;
  htop)   $xterm -e htop ;;
  mixer)  $aterm -bg black -fg white -title 'ALSA Mixer' -e alsamixer ;;
  red|orange|green|cyan|purple) $aterm_transparent -fg white -tint $1 ;;
  *)                            $aterm_transparent -fg white -tint white ;;
esac
