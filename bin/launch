#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

readonly term='urxvt'

case "$1" in
  browser)        exec google-chrome ;;
  calculator)     exec gnome-calculator ;;
  editor)         exec gvim --nofork ;;
  finder)         exec nautilus > /dev/null 2>&1 ;;
  htop)           exec $term -e htop ;;
  mixer)          exec $term -bg black -fg white -title 'ALSA Mixer' -e alsamixer ;;
  python)         exec $term -e python3 ;;
  screensaver)    exec xautolock -locknow ;;
  screenshot)     exec gnome-screenshot ;;
  terminal)       exec $term ;;
  volume-up)      exec pactl set-sink-volume 0 +5% ;;
  volume-down)    exec pactl set-sink-volume 0 -5% ;;
  volume-mute)    exec pactl set-sink-mute 0 toggle  ;;
  *)              echo 'What do you want to launch?' 1>&2 ; exit 1 ;;
esac
